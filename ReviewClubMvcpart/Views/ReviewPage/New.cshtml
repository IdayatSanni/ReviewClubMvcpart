@model ReviewClubMvcpart.Dtos.CreateReviewDto

@{
    ViewData["Title"] = "Add New Review";
}

<h1>Add New Review</h1>

<form asp-action="Add" method="post">
    <div class="form-group">
        <label asp-for="ReviewText"></label>
        <textarea asp-for="ReviewText" class="form-control" required></textarea>
    </div>
    <div class="form-group">
        <label asp-for="BookId">Book ID</label>
        <input asp-for="BookId" class="form-control" required />
    </div>
    <div class="form-group">
        <label asp-for="ReviewersId">Reviewer ID</label>
        <input asp-for="ReviewersId" class="form-control" required />
    </div>
    <button type="submit" class="btn btn-primary">Add Review</button>
</form>

<a asp-controller="ReviewPage" asp-action="List" class="btn btn-secondary">Back to List</a>
