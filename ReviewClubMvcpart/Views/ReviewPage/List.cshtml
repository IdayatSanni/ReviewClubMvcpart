@model IEnumerable<ReviewClubMvcpart.Dtos.ReviewDto>

@{
    ViewBag.Title = "Reviews List";
}

<h2>Reviews</h2>

<table class="table">
    <thead>
        <tr>
            <th>Book Name</th>
            <th>Reviewer Name</th>
            <th>Review Text</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var review in Model)
        {
            <tr>
                <td>@review.BookName</td>
                <td>@review.ReviewerName</td>
                <td>@review.ReviewText</td>
                <td>
                    <a asp-action="Details" asp-route-id="@review.ReviewId">Details</a> |
                    <a asp-action="Edit" asp-route-id="@review.ReviewId">Edit</a> |
                    <a asp-action="ConfirmDelete" asp-route-id="@review.ReviewId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="New" class="btn btn-primary">Add New Review</a>
