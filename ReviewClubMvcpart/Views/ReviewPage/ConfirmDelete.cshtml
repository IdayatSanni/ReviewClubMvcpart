@model ReviewClubMvcpart.Dtos.ReviewDto

@{
    ViewData["Title"] = "Confirm Delete Review";
}

<h1>Confirm Delete Review</h1>

<div>
    <h3>Are you sure you want to delete this review?</h3>
    <p><strong>Review ID:</strong> @Model.ReviewId</p>
    <p><strong>Book Name:</strong> @Model.BookName</p>
    <p><strong>Reviewer Name:</strong> @Model.ReviewerName</p>
    <p><strong>Review Text:</strong> @Model.ReviewText</p>
</div>

<form asp-action="Delete" method="post">
    <input type="hidden" name="id" value="@Model.ReviewId" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-controller="ReviewPage" asp-action="List" class="btn btn-secondary">Cancel</a>
</form>
