@model ReviewClubMvcpart.Dtos.CreateBookDto

@{
    ViewData["Title"] = "Add";
}

<h1>Add New Book</h1>

<form asp-action="Add" method="post" enctype="multipart/form-data">
    <div class="form-group">
        <label asp-for="BookName"></label>
        <input asp-for="BookName" class="form-control" required />
    </div>
    <div class="form-group">
        <label asp-for="BookAuthor"></label>
        <input asp-for="BookAuthor" class="form-control" required />
    </div>
    <div class="form-group">
        <label asp-for="CategoryId"></label>
        <select asp-for="CategoryId" class="form-control" asp-items="@(new SelectList(ViewBag.Categories, "Id", "BookCategory"))" required></select>
    </div>
    <div class="form-group">
        <label asp-for="IsBookOfTheMonth"></label>
        <input asp-for="IsBookOfTheMonth" type="checkbox" />
    </div>
    <div class="form-group">
        <label for="BookImage">Book Image</label>
        <input type="file" name="BookImage" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary">Create</button>
</form>

<a asp-controller="BookPage" asp-action="List" class="btn btn-secondary">Cancel</a>
