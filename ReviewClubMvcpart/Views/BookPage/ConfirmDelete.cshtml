@model ReviewClubMvcpart.Dtos.BookDto

@{
    ViewData["Title"] = "Confirm Delete";
}

<h1>Confirm Delete</h1>

<h3>Are you sure you want to delete the book "@Model.BookName"?</h3>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-controller="BookPage" asp-action="List" class="btn btn-secondary">Cancel</a>
</form>
