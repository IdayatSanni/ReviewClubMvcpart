@model ReviewClubMvcpart.Dtos.UpdateBookDto

@{
    ViewData["Title"] = "Edit Book";
}

<h1>Edit Book</h1>

<form asp-action="Update" method="post" enctype="multipart/form-data">
    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <label asp-for="BookName"></label>
        <input asp-for="BookName" class="form-control" required />
    </div>
    <div class="form-group">
        <label asp-for="BookAuthor"></label>
        <input asp-for="BookAuthor" class="form-control" required />
    </div>
    <div class="form-group">
        <label asp-for="CategoryId"></label>
        <select asp-for="CategoryId" class="form-control" asp-items="@(new SelectList(ViewBag.Categories, "Id", "BookCategory", Model.CategoryId))" required></select>
    </div>
    <div class="form-group">
        <label asp-for="IsBookOfTheMonth"></label>
        <input asp-for="IsBookOfTheMonth" type="checkbox" />
    </div>
    <div class="form-group">
        <label for="BookImage">Book Image</label>
        <input type="file" name="BookImage" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary">Update</button>
</form>

<a asp-controller="BookPage" asp-action="Details" asp-route-id="@Model.Id" class="btn btn-secondary">Cancel</a>
