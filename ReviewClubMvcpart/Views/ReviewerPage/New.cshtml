@model ReviewClubMvcpart.Dtos.CreateReviewerDto

<h1>Create Reviewer</h1>

<form asp-action="Add" method="post">
    <div class="form-group">
        <label asp-for="ReviewerName"></label>
        <input asp-for="ReviewerName" class="form-control" required />
        <span asp-validation-for="ReviewerName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="ReviewerEmail"></label>
        <input asp-for="ReviewerEmail" class="form-control" required />
        <span asp-validation-for="ReviewerEmail" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Create</button>
    <a href="@Url.Action("List", "ReviewerPage")" class="btn btn-secondary">Back to List</a>
</form>
