@model ReviewClubMvcpart.Dtos.CategoryDto

@{
    ViewData["Title"] = "Confirm Delete Category";
}

<h1>Confirm Delete Category</h1>

<div>
    <h3>Are you sure you want to delete this category?</h3>
    <p><strong>Category ID:</strong> @Model.Id</p>
    <p><strong>Category Name:</strong> @Model.BookCategory</p>
</div>

<form asp-action="Delete" method="post">
    <input type="hidden" name="id" value="@Model.Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-controller="CategoryPage" asp-action="List" class="btn btn-secondary">Cancel</a>
</form>
