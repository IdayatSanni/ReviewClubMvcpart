@model ReviewClubMvcpart.Dtos.CreateCategoryDto

@{
    ViewData["Title"] = "Add New Category";
}

<h1>Add New Category</h1>

<form asp-action="Add" method="post">
    <div class="form-group">
        <label asp-for="BookCategory"></label>
        <input asp-for="BookCategory" class="form-control" required />
    </div>
    <button type="submit" class="btn btn-primary">Add Category</button>
</form>

<a asp-controller="CategoryPage" asp-action="List" class="btn btn-secondary">Back to List</a>
